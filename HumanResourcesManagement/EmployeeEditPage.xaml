<Page x:Class="HumanResourcesManagement.EmployeeEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HumanResourcesManagement"
      mc:Ignorable="d" 
      d:DesignHeight="464" d:DesignWidth="590"
      Name ="EmployeeEdit"
      Title="EmployeeEditPage">

    <Grid Background="#FFA8E6B7">
        <TextBox x:Name="NameEmployee" TextWrapping="Wrap" Margin="10,97,429,291" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox x:Name="PositionEmployee" HorizontalAlignment="Left" Height="52" Margin="166,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="153" Text="{Binding Position, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock TextWrapping="Wrap" Text="Name" Margin="10,76,429,0" TextAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock TextWrapping="Wrap" Text="Position" Margin="166,76,271,0" TextAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="SaveButton" Content="Сохранить" Margin="86,192,327,172" Click="SaveButton_Click" BorderThickness="5,5,5,5"/>
    </Grid>
</Page>
